<UserControl x:Class="App.Views.RecognitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F2F6FA">

    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="White"
                CornerRadius="15"
                BorderBrush="#D0D9E2"
                BorderThickness="1"
                Padding="18"
                Margin="0,0,10,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="XE VÀO" FontSize="20"
                           FontWeight="Bold" Foreground="#2D4B65"  Margin="0,0,0,12"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="1.6*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Live Camera – Xe vào" FontSize="13"
                                   FontWeight="SemiBold" Foreground="#4A5568" Margin="0,0,0,6"/>
                        <Border Background="#E8EDF2" BorderBrush="#CBD5E0" BorderThickness="1.5"
                                CornerRadius="10" Padding="6" Height="260" Width="260" HorizontalAlignment="Center">
                            <Image x:Name="CamInLive"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Ảnh chụp phương tiện"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   Margin="0,10,0,4"/>
                        <Border Background="#EDF2F7"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="4"
                                Height="110"
                                Width="260"
                                HorizontalAlignment="Center">
                            <Image x:Name="CamInCaptured"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- BÊN PHẢI: TEXT + ẢNH CROP -->
                    <StackPanel Grid.Column="2">
                        <!-- Ký tự nhận diện -->
                        <TextBlock Text="Ký tự nhận diện:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,130,0,2"/>
                        <Border Height="34"
                                Width="220"
                                CornerRadius="4"
                                Background="White"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,4">
                            <TextBlock x:Name="TxtPlateInChars"
                                       Text="X  X  -  9  9  9  9  9"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#2B6CB0"/>
                        </Border>

                        <!-- Biển số -->
                        <TextBlock Text="Biển số:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,8,0,2"/>
                        <Border Height="26"
                                Width="220"
                                CornerRadius="4"
                                Background="#F7FAFC"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,2">
                            <TextBlock x:Name="TxtPlateIn"
                                       Text="XX-99999"
                                       FontWeight="Bold"
                                       Foreground="#1A202C"/>
                        </Border>

                        <!-- Thời gian -->
                        <TextBlock Text="Thời gian:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,8,0,2"/>
                        <Border Height="26"
                                Width="220"
                                CornerRadius="4"
                                Background="#F7FAFC"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,2">
                            <TextBlock x:Name="TxtTimeIn"
                                       Text="--/--/---- --:--:--"
                                       Foreground="#1A202C"/>
                        </Border>

                        <!-- Ảnh biển số crop (DƯỚI KÝ TỰ) -->
                        <TextBlock Text="Biển số (crop)"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   Margin="0,10,0,4"/>
                        <Border Background="White"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Height="55"
                                Width="220">
                            <Image x:Name="CamInPlate"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- Nút Browser -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button x:Name="BtnBrowseIn"
                                    Content="Browser..."
                                    Width="90" Height="28"
                                    Background="#4A5568"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ===================== XE RA ===================== -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="15"
                BorderBrush="#D0D9E2"
                BorderThickness="1"
                Padding="18"
                Margin="10,0,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Tiêu đề -->
                    <RowDefinition Height="*"/>
                    <!-- Nội dung -->
                </Grid.RowDefinitions>

                <!-- ===== Tiêu đề ===== -->
                <TextBlock Grid.Row="0"
                           Text="XE RA"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2D4B65"
                           Margin="0,0,0,12"/>

                <!-- ===== NỘI DUNG CHÍNH ===== -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="1.6*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BÊN TRÁI: LIVE + ẢNH CHỤP PHƯƠNG TIỆN -->
                    <StackPanel Grid.Column="0">
                        <!-- Live Camera (vuông) -->
                        <TextBlock Text="Live Camera – Xe ra"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   Margin="0,0,0,6"/>
                        <Border Background="#E8EDF2"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1.5"
                                CornerRadius="10"
                                Padding="6"
                                Height="260" Width="260"
                                HorizontalAlignment="Center">
                            <Image x:Name="CamOutLive"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- Ảnh chụp phương tiện -->
                        <TextBlock Text="Ảnh chụp phương tiện"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   Margin="0,10,0,4"/>
                        <Border Background="#EDF2F7"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="4"
                                Height="110"
                                Width="260"
                                HorizontalAlignment="Center">
                            <Image x:Name="CamOutCaptured"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- BÊN PHẢI: TEXT + ẢNH CROP -->
                    <StackPanel Grid.Column="2">
                        <!-- Ký tự nhận diện -->
                        <TextBlock Text="Ký tự nhận diện:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,130,0,2"/>
                        <Border Height="34"
                                Width="220"
                                CornerRadius="4"
                                Background="White"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,4">
                            <TextBlock x:Name="TxtPlateOutChars"
                                       Text="X  X  -  0  0  0  0  0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#2B6CB0"/>
                        </Border>

                        <!-- Biển số -->
                        <TextBlock Text="Biển số:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,8,0,2"/>
                        <Border Height="26"
                                Width="220"
                                CornerRadius="4"
                                Background="#F7FAFC"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,2">
                            <TextBlock x:Name="TxtPlateOut"
                                       Text="XX-00000"
                                       FontWeight="Bold"
                                       Foreground="#1A202C"/>
                        </Border>

                        <!-- Thời gian -->
                        <TextBlock Text="Thời gian:"
                                   FontWeight="SemiBold"
                                   Foreground="#2D3748"
                                   Margin="0,8,0,2"/>
                        <Border Height="26"
                                Width="220"
                                CornerRadius="4"
                                Background="#F7FAFC"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                Padding="6,2">
                            <TextBlock x:Name="TxtTimeOut"
                                       Text="--/--/---- --:--:--"
                                       Foreground="#1A202C"/>
                        </Border>

                        <!-- Ảnh biển số crop (DƯỚI KÝ TỰ) -->
                        <TextBlock Text="Biển số (crop)"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   Margin="0,10,0,4"/>
                        <Border Background="White"
                                BorderBrush="#CBD5E0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Height="55"
                                Width="220">
                            <Image x:Name="CamOutPlate"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- Nút Browser -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,0,0">
                            <Button x:Name="BtnBrowseOut"
                                    Content="Browser..."
                                    Width="90" Height="28"
                                    Background="#4A5568"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
