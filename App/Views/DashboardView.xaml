<UserControl x:Class="App.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F2F6FA">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="QUẢN LÝ"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2D4B65"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBox x:Name="SearchTextBox"
                         Width="220"
                         Height="30"
                         Margin="0,0,8,0"
                         Padding="8,2"
                         Background="White"
                         BorderBrush="#CBD5E0"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Text="" />
                <Button x:Name="BtnSearch"
                        Content="Tìm kiếm"
                        Height="30"
                        Padding="12,0"
                        Background="#3182CE"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== KHỐI 1: XE ĐANG TRONG BÃI (VÀO) ========== -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#D0D9E2"
                    BorderThickness="1"
                    Padding="16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- header -->
                        <RowDefinition Height="*"/>
                        <!-- bảng -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Xe đang trong bãi"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#2D3748"/>
                            <TextBlock Text="Các phương tiện còn giữ trong bãi (trạng thái: vào)"
                                       FontSize="11"
                                       Foreground="#A0AEC0"/>
                        </StackPanel>

                        <Border DockPanel.Dock="Right"
                                Background="#E3F2FF"
                                CornerRadius="10"
                                Padding="10,4"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tổng số: "
                                           FontSize="13"
                                           Foreground="#4A5568"/>
                                <TextBlock Text="{Binding TotalInLot}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#2B6CB0"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DockPanel>

                    <!-- Bảng xe trong bãi -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding VehiclesInLot}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Biển số"        Binding="{Binding Plate}"       Width="*" />
                            <DataGridTextColumn Header="Loại xe"        Binding="{Binding VehicleType}" Width="*" />
                            <DataGridTextColumn Header="Thời gian vào"  Binding="{Binding TimeIn}"      Width="*" />
                            <DataGridTextColumn Header="Vị trí"         Binding="{Binding Slot}"        Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- ========== KHỐI 2: XE ĐÃ RA (RA) ========== -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#D0D9E2"
                    BorderThickness="1"
                    Padding="16">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- header -->
                        <RowDefinition Height="*"/>
                        <!-- bảng -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Xe đã ra"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#2D3748"/>
                            <TextBlock Text="Các phương tiện đã rời bãi (trạng thái: ra)"
                                       FontSize="11"
                                       Foreground="#A0AEC0"/>
                        </StackPanel>

                        <Border DockPanel.Dock="Right"
                                Background="#FFF5F5"
                                CornerRadius="10"
                                Padding="10,4"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tổng số: "
                                           FontSize="13"
                                           Foreground="#4A5568"/>
                                <TextBlock Text="{Binding TotalExited}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#E53E3E"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </DockPanel>

                    <!-- Bảng xe đã ra -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding VehiclesExited}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Biển số"        Binding="{Binding Plate}"       Width="*" />
                            <DataGridTextColumn Header="Loại xe"        Binding="{Binding VehicleType}" Width="*" />
                            <DataGridTextColumn Header="Thời gian vào"  Binding="{Binding TimeIn}"      Width="*" />
                            <DataGridTextColumn Header="Thời gian ra"   Binding="{Binding TimeOut}"     Width="*" />
                            <DataGridTextColumn Header="Tiền gửi"       Binding="{Binding Fee}"         Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
